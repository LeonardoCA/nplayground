      - access
      - alias
      - dir
      - deflate
      - echo
      - env
      - filter
      - fast_cgi
      - include
      - log_config
      - negotiation
      - mime
      - mime_magic
      - rewrite
      - setenvif
      - status
      - ssl
      - vhost_alias

  php_extensions:
    - apc
    - curl
    - fileinfo
    - gd
    - intl
    - json
    - mbstring
    - mcrypt
    - pdo_mysql
    - tidy
    - tokenizer
  after_deploy:
    - "rm -rf temp/cache/*"


database1:
  name: nplayground
  type: mysql
  topology: redundant

